<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_rb_home"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/main_rb_type"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_type_selector"
            android:text="分类" />

        <RadioButton
            android:id="@+id/main_rb_community"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_community_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/main_rb_cart"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_cart_selector"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/main_rb_user"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_user_selector"
            android:text="用户" />
    </RadioGroup>


</LinearLayout>
